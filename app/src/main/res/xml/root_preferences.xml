<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/messages_header">

        <SwitchPreference
            android:defaultValue="false"
            android:key="modo_oscuro"
            android:summaryOff="@string/dark_mode_summary"
            android:summaryOn="@string/dark_mode_summary"
            android:title="@string/dark_mode_enabled" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/datos_personales_header">

        <EditTextPreference
            android:id="@+id/nombre_seleccionado_sp"
            android:key="nombre_seleccionado"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="@string/nombre_summary"
            android:title="@string/nombre_title" />
        <EditTextPreference
            android:id="@+id/telefono_seleccionado_sp"
            android:key="telefono_seleccionado"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="@string/telefono_summary"
            android:title="@string/telefono_title" />

    </PreferenceCategory>

</PreferenceScreen>