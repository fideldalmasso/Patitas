<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_simple"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:backgroundTint="?attr/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/remitente_foto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:transitionName="transicion_imagen"
            android:src="@drawable/ic_baseline_person_24"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">


            <TextView
                android:id="@+id/remitente_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juan Pablo Cobol"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="?attr/colorOnBackground"
                android:transitionName="transicion_titulo"
                />


            <TextView
                android:id="@+id/publicacion_asociada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PublicaciÃ³n: Firulais"
                android:maxLines="1"
                android:textAppearance="?attr/textAppearanceSubtitle2"
                android:textColor="?attr/colorOnSecondary"
                android:transitionName="transicion_titulo"
                />

            <TextView
                android:id="@+id/contenido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hola si, yo lo vi por calle San Martin..."
                android:maxLines="1"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="?attr/colorOnBackground"
                android:transitionName="transicion_titulo"
                />








        </LinearLayout>




    </LinearLayout>

</com.google.android.material.card.MaterialCardView>