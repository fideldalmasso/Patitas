<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_completo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:backgroundTint="?attr/background"
        android:layout_margin="4dp"
        >

        <LinearLayout
            android:id="@+id/lista_publicacion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/card_completo_imagen"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:contentDescription="Descripcion xd"
                android:scaleType="centerCrop"
                />
    <!--        android:srcCompat="@drawable/media"-->

            <!-- Media -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:id="@+id/card_completo_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titulo xd"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="?attr/colorOnBackground"
                    android:transitionName="transicion_titulo"
                    />
                <TextView
                    android:id="@+id/card_completo_secundario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Texto secundario xd"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?attr/colorOnSecondary"
                    />
                <TextView
                    android:id="@+id/card_completo_soporte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Texto soporte xd"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?attr/colorOnSecondary"
                    />

            </LinearLayout>

        <!-- Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/card_completo_boton1"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Compartir"
                    android:textColor="?attr/colorOnBackground"
                    app:icon="@drawable/ic_baseline_share_24"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/card_completo_boton2"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MÃ¡s info"
                    android:textColor="?attr/colorOnBackground"
                    app:icon="@drawable/ic_baseline_read_more_24" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_anchor="@id/lista_publicacion"
        app:layout_anchorGravity="bottom|right|end"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="@color/white"
        app:icon="@drawable/ic_baseline_message_24"
        app:iconTint="@color/white"
        android:text="Responder"
        app:borderWidth="0dp"
        app:elevation="0dp"
    />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
