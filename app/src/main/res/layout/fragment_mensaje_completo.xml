<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"

    android:backgroundTint="?attr/background"
    android:id="@+id/mensaje_completo"
    android:background="?attr/background"
    android:clickable="true"

    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                <ImageView
                    android:id="@+id/remitente_foto"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:transitionName="transicion_imagen"
                    android:src="@drawable/ic_baseline_person_24"
                    app:tint="?attr/colorOnSecondary"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    >


                        <TextView
                            android:id="@+id/remitente_nombre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Juan Pablo Cobol"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:textColor="?attr/colorOnBackground"

                            android:transitionName="transicion_titulo"
                            />


                        <TextView
                            android:id="@+id/publicacion_asociada"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Publicación: Firulais"
                            android:maxLines="1"
                            android:textAppearance="?attr/textAppearanceSubtitle1"
                            android:textColor="?attr/colorOnSecondary"
                            android:transitionName="transicion_titulo"
                            />
                    <TextView
                        android:id="@+id/fecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10/05/2022"
                        android:maxLines="1"
                        android:textAppearance="?attr/textAppearanceSubtitle2"
                        android:textColor="?attr/colorOnSecondary"
                        android:transitionName="transicion_titulo"
                        />

                </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >
                        <TextView
                            android:paddingBottom="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Info de contacto"
                            android:maxLines="1"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:textColor="?attr/colorOnBackground"
                            android:transitionName="transicion_titulo"
                            />
                        <TextView

                            android:id="@+id/info_contacto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="20dp"
                            android:text="Teléfono: +54342111222\nBarrio Centro"
                            android:maxLines="10"
                            android:textAppearance="?attr/textAppearanceBody1"
                            android:textColor="?attr/colorOnBackground"
                            android:transitionName="transicion_titulo"
                            />
                    <TextView
                        android:paddingBottom="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mensaje"
                        android:maxLines="10"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="?attr/colorOnBackground"
                        android:transitionName="transicion_titulo"
                        />
                    <TextView

                        android:id="@+id/contenido"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:text="Hola, lo vi entre San Martin y Suipacha y lo agarré. Quedó en mi laburo. Está muy asustado, vení cuanto antes. Me encuentro entre 8 y 18hs en el local informático de la esquina. Llamame cualquier cosa."
                        android:maxLines="10"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textColor="?attr/colorOnBackground"
                        android:transitionName="transicion_titulo"
                        />
                </LinearLayout>







</LinearLayout>
</com.google.android.material.card.MaterialCardView>