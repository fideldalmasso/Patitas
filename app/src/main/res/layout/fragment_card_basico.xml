<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="?attr/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/card_imagen"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:contentDescription="Descripcion xd"
            android:scaleType="centerCrop"
            />
<!--        android:srcCompat="@drawable/media"-->

        <!-- Media -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title, secondary and supporting text -->
            <TextView
                android:id="@+id/card_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo xd"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="?attr/colorOnBackground"
                />
            <TextView
                android:id="@+id/card_secundario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Texto secundario xd"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?attr/colorOnSecondary"
                />
            <TextView
                android:id="@+id/card_soporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Texto soporte xd"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?attr/colorOnSecondary"
                />

        </LinearLayout>

    <!-- Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/card_boton1"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Compartir"
                android:textColor="?attr/colorOnBackground"
                app:icon="@drawable/ic_baseline_share_24"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/card_boton2"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MÃ¡s info"
                android:textColor="?attr/colorOnBackground"
                app:icon="@drawable/ic_baseline_read_more_24" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>